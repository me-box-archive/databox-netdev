	function getSensors(type) {
		if (sensors == null) {
			return [];
		}
		else if (type == null) {
			return sensors;
		}
		else {
			return sensors.filter(function (sensor) {
				return sensor.type === type;
			});
		}
	}

	function getDatasource(id) {
		for(var datasource of manifest.datasources) {
			if(datasource.clientid === id) {
				return datasource;
			}
		}
	}

